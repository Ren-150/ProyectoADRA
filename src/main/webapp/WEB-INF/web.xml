  <!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<servlet>
		<servlet-name>AxisServlet</servlet-name>
		<servlet-class>org.apache.axis2.transport.http.AxisServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>CategoriaController</servlet-name>
		<display-name>CategoriaController</display-name>
		<description></description>
		<servlet-class>pe.com.adra.controller.CategoriaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PersonaController</servlet-name>
		<display-name>PersonaController</display-name>
		<description></description>
		<servlet-class>pe.com.adra.controller.PersonaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CredencialController</servlet-name>
		<display-name>CredencialController</display-name>
		<description></description>
		<servlet-class>pe.com.adra.controller.CredencialController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SesionController</servlet-name>
		<display-name>SesionController</display-name>
		<description></description>
		<servlet-class>pe.com.adra.controller.SesionController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CapacitacionController</servlet-name>
		<display-name>CapacitacionController</display-name>
		<description></description>
		<servlet-class>pe.com.adra.controller.CapacitacionController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CategoriaController</servlet-name>
		<url-pattern>/cc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PersonaController</servlet-name>
		<url-pattern>/pc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CredencialController</servlet-name>
		<url-pattern>/cdc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SesionController</servlet-name>
		<url-pattern>/sc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CapacitacionController</servlet-name>
		<url-pattern>/cpc</url-pattern>
	</servlet-mapping>
</web-app>